  "features": {
    "templateVariables": {
      "enabled": true,
      "variables": [
        "{documentRoot}",
        "{deployPath}",
        "{server}",
        "{path}",
        "{domain}",
        "{repository}",
        "{branch}"
      ]
    },
    "conditionalFields": {
      "enabled": true,
      "rules": [
        {
          "condition": "strategy === 'ftp-upload'",
          "hideFields": ["repository", "branch"],
          "showFields": ["excludeFiles"]
        },
        {
          "condition": "triggerType === 'scheduled'", 
          "showFields": ["scheduleCron"],
          "hideFields": []
        }
      ]
    },
    "strategySpecific": {
      "enabled": true,
      "loadGuides": true,
      "generateWorkflows": true
    }
  },

