    {
        $key = "metrics_[features]_{$endpoint}";
        $metrics = Cache::get($key, [
            'total_requests' => 0,
            'total_duration' => 0,
            'errors' => 0,
            'last_updated' => now()
        ]);

        $metrics['total_requests']++;
        $metrics['total_duration'] += $duration;
        
        if ($statusCode >= 400) {
            $metrics['errors']++;
        }
        
        $metrics['last_updated'] = now();

        Cache::put($key, $metrics, 3600);
    }
